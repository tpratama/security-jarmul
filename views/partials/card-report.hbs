<div class="card-report">
	<div class="card-report-left">
		<h3>Rp. {{cost}}</h3>
		<div class="card-report-info">
			<div class="card-report-info-row">
				<b>Category:</b><span>{{category}}</span>
			</div>
			<div class="card-report-info-row">
				<b>Date:</b><span>{{date}}</span>
			</div>
			{{#if link}}
			<div class="card-report-info-row">
				<a href="{{link}}"><button class="btn-simple">Download File</button></a>
			</div>
            <div class="card-report-info-row">
				<img src="{{ image }}" class="img-responsive">
			</div>
			{{/if}}
			<div class="card-report-info-row">
                <a href="{{editLink}}"><button class="btn-simple">Edit</button></a>
            </div>
            <div class="card-report-info-row">
                <form action="{{deleteLink}}" method="POST">
                    <input hidden name="id" value="{{id}}">
                    <button class="btn-simple">Delete</button></a>
                </form>
            </div>
		</div>
	</div>
	<div class="card-report-right">
		<h6>Notes</h6>
		<div class="card-report-content">
			<section>
				{{note}}
			</section>
		</div>
	</div>
</div>